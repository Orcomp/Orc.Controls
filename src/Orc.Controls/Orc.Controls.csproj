<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orc.Controls</AssemblyName>
    <RootNamespace>Orc.Controls</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.Controls</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Controls library.</Description>
    <PackageTags>orc;controls;datepicker;timepicker;textbox;connection;string;watermark;</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>84E22240-D816-4B43-AC37-92B805A2BEE3</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Costura.Fody" Version="3.2.0" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="2.2.2" PrivateAssets="all" />
    <PackageReference Include="Catel.Core" Version="5.9.0-alpha0015" />
    <PackageReference Include="Catel.Fody" Version="3.5.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.9.0-alpha0015" />
    <PackageReference Include="Fody" Version="3.3.3" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ModuleInit.Fody" Version="1.8.3" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.3" PrivateAssets="all" />
    <PackageReference Include="Orc.FileSystem" Version="3.1.0-alpha0007" />
    <PackageReference Include="WindowsAPICodePack-Core" Version="1.1.2" PrivateAssets="all" />
    <PackageReference Include="WindowsAPICodePack-Shell" Version="1.1.1" PrivateAssets="all" />
    <!--<PackageReference Include="WpfAnalyzers" Version="2.1.2.1" PrivateAssets="all" />-->
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>
